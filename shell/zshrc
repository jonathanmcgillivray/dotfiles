# ============================================================================
# 1. THE PATH (Fixes Neovim, Claude, and Opencode)
# ============================================================================
# We use 'typeset -U' to ensure PATH only contains unique entries
typeset -U path
path=(
    $HOME/.local/bin
    $HOME/.local/share/bob/nvim-bin
    /home/aerometrix/.opencode/bin
    $HOME/.cargo/bin
    $GOPATH/bin
    $path
)
export PATH

# Set Dotfiles directory
export DOTFILES_DIR="${DOTFILES_DIR:-$HOME/.dotfiles}"

# ============================================================================
# 2. ZSH OPTIONS (The "Sane Defaults")
# ============================================================================
# History
HISTFILE=~/.zsh_history
HISTSIZE=50000
SAVEHIST=50000

setopt AUTO_CD              # Just type a directory name to cd into it
setopt EXTENDED_HISTORY     # Write the history file in the ":start:elapsed;command" format.
setopt SHARE_HISTORY        # Share history between all sessions.
setopt HIST_EXPIRE_DUPS_FIRST # Expire duplicate entries first when trimming history.
setopt HIST_IGNORE_DUPS     # Don't record an entry that was just recorded.
setopt HIST_IGNORE_ALL_DUPS # Delete old recorded entry if new entry is a duplicate.
setopt HIST_REDUCE_BLANKS   # Remove superfluous blanks before recording entry.

# General UI/UX
setopt NO_BEEP
setopt INTERACTIVE_COMMENTS # Allow comments in interactive shells
setopt CORRECT              # Spelling correction for commands

# ============================================================================
# 3. COMPLETION ENGINE (The "Modern" Way)
# ============================================================================
autoload -Uz compinit && compinit -d ~/.zsh/.compdump

# Zstyle completions (Case-insensitive, colorful, and smart)
zstyle ':completion:*' matcher-list 'm:{a-z}={A-Z}' # Case-insensitive
zstyle ':completion:*' list-colors "${(s.:.)LS_COLORS}" # Match LS_COLORS
zstyle ':completion:*' menu select # Visual menu for completion
zstyle ':completion:*:descriptions' format '[%d]'
zstyle ':completion:*:make:*:*' tag-order 'targets'

# ============================================================================
# 4. PROMPT (Aerometrix Brand Colors)
# ============================================================================
setopt PROMPT_SUBST

autoload -Uz vcs_info
precmd() { vcs_info }

# True color (24-bit) - Ocean Blue #134074, Lime #d7df23
zstyle ':vcs_info:git:*' formats $' %{\e[38;2;215;223;35m%}%b%{\e[0m%}'

# Clean minimal prompt: path (ocean) branch (lime) ❯ (lime)
# Smart path: full if ≤4 deep, otherwise …/last/three/dirs
PROMPT=$'%{\e[38;2;19;64;116m%}%(4~|…/%3~|%~)%{\e[0m%}${vcs_info_msg_0_} %{\e[38;2;215;223;35m%}❯%{\e[0m%} '

# ============================================================================
# 5. MIGRATED ALIASES (From your Bashrc)
# ============================================================================
alias ls='ls --color=auto'
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias grep='grep --color=auto'
alias ..='cd ..'
alias ...='cd ../..'

# The "Alert" alias you liked from Bash
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'

# ============================================================================
# 6. EXTERNAL TOOLS & MODULAR FILES
# ============================================================================

# Source modular files if they exist
[ -f "$DOTFILES_DIR/shell/exports.sh" ] && source "$DOTFILES_DIR/shell/exports.sh"
[ -f "$DOTFILES_DIR/shell/aliases.sh" ] && source "$DOTFILES_DIR/shell/aliases.sh"
[ -f "$DOTFILES_DIR/shell/functions.sh" ] && source "$DOTFILES_DIR/shell/functions.sh"

# NVM (Lazy load for faster shell startup)
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && source "$NVM_DIR/nvm.sh"

# FZF
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

# Editor
export EDITOR=nvim
export VISUAL=nvim

# ============================================================================
# 7. LOCAL OVERRIDES (Machine specific)
# ============================================================================
[ -f ~/.zshrc.local ] && source ~/.zshrc.local
